{
    "name": "morebec/wplug",
    "description": "A lightweight, simple opiniated Wordpress Plugin development framework",
    "type": "library",

    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "jwillp/shuttle-export",
                "version": "1.0",
                "source": {
                    "url": "https://github.com/jwillp/shuttle-export",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        }
    ],

    "require": {
        "php": ">=5.5.9",
        "symfony/yaml": "~2.8",
        "twig/twig": "~1.24",
        "symfony/http-foundation": "~2.8",
        "katzgrau/klogger": "^1.2"
    },

    "license": "MIT License",

    "authors": [
        {
            "name": "jwillp",
            "email": "jwilliam.perreault@morebec.com"
        }
    ],

    "minimum-stability": "stable",

    "autoload": {
        "psr-4": {
            "WPlug\\": ["src/"]
        }
    }
}
